<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tn.dwc.smartshopping">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Util.SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/smart_shopping_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Container"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".Activities.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider728615400528729"
            android:exported="true" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity
            android:name=".Activities.Web_act"
            android:label="@string/title_activity_web_act" />
        <activity
            android:name=".Activities.DetailQRScanActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.DetailBarScanActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/TranslucentActionBar" />
        <activity
            android:name=".Activities.DetailsPromoActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/TranslucentActionBar" />
        <activity
            android:name=".Activities.QRActivity"
            android:label="@string/title_activity_qr"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".Activities.BarActivity"
            android:label="@string/title_activity_qr"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.QrFindActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.QRProductFindActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.FindActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
