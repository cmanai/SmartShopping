<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        android:background="#ffffff"

        app:contentPadding="0dp">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView244"
            android:scaleType="fitXY"
android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical|center_horizontal|left"
            android:src="@drawable/smart_shopping_logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="Large Text"
            android:id="@+id/title2344"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="17dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginLeft="130dp"


          />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:text="100.000 DT /1100.000 DT"
        android:id="@+id/budget_history"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginTop="55dp"
        android:textColor="#80000000"
        android:textAlignment="center"
        android:layout_marginLeft="130dp"

        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="12 products"
            android:id="@+id/product_number"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="80dp"
            android:textColor="#80000000"
            android:textAlignment="center"
            android:layout_marginLeft="130dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="11/16/2015"
            android:id="@+id/creation_date"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="110dp"
            android:textColor="#80000000"
            android:textAlignment="center"
            android:layout_marginLeft="130dp"

            />
        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/buttonflat34554"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right|bottom"

            android:layout_marginBottom="5dp"
            android:layout_marginRight="17dp"
            android:background="#3498db"

            android:text="Details" />


    </android.support.v7.widget.CardView>
</FrameLayout>