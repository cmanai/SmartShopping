<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        android:background="#ffffff"
        app:contentPadding="0dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView244"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal|left"
            android:src="@drawable/header" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView245"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal|center_vertical|left"
            android:layout_marginLeft="40dp"
            android:visibility="invisible"

            android:src="@drawable/ok" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="Large Text"
            android:id="@+id/title23"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="17dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginLeft="160dp"


          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="Price :"
            android:id="@+id/price1"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="60dp"
            android:textColor="#80000000"
            android:layout_marginLeft="160dp"

           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="100 DT"
            android:id="@+id/price_value1"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="60dp"
            android:textColor="#80000000"
            android:textAlignment="center"
            android:layout_marginLeft="225dp"

            />

        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/buttonflat34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right|bottom"

            android:layout_marginBottom="5dp"
            android:layout_marginRight="17dp"
            android:background="#3498db"

            android:text="Purchase" />
        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/buttonflat345"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right|bottom"

            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="#3498db"
            android:visibility="invisible"

            android:text="Undo" />
        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/buttonflat333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right|bottom"

            android:layout_marginBottom="5dp"
            android:layout_marginRight="100dp"
            android:background="#3498db"

            android:text="Remove" />
    </android.support.v7.widget.CardView>
</FrameLayout>