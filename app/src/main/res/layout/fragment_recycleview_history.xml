<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/my_color"
        android:id="@+id/relative_recycle"
        android:layout_marginTop="50dp"
        android:layout_height="130dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Number of Products :"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 80 products"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="220dp"
            android:textColor="@color/md_white_1000"
            android:id="@+id/my_shopping_list_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping lists number :"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="17dp"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 25 Shopping lists"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="200dp"
            android:textColor="@color/md_white_1000"
            android:id="@+id/my_shopping_list" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spent / Total Budget"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="17dp"
            android:textColor="@color/md_white_1000"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:id="@+id/Spent_Budget_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18520.000 DT / 45200.000DT"
            android:layout_alignParentTop="true"
            android:textSize="14sp"

            android:layout_marginTop="105dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_horizontal"
            android:textColor="@color/md_white_1000"
            android:id="@+id/Spent_Budget_value" />
    </RelativeLayout>

<android.support.v7.widget.RecyclerView

    android:id="@+id/recyclerVieww"
    android:layout_marginTop="180dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No history to display"
        android:id="@+id/no_shopping_displays"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#80000000"
        android:visibility="invisible"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewpics"
        android:visibility="invisible"
        android:src="@drawable/history"
        android:layout_above="@+id/no_shopping_displays"
        android:layout_centerHorizontal="true" />

</RelativeLayout>