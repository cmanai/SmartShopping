<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical" >
    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/add_to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:background="#FFB805"
        materialdesign:animate="false"

        materialdesign:iconDrawable="@drawable/add_list"

        android:layout_above="@+id/price_product"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp" />
    <TextView
        android:id="@+id/title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:text="Title"
        android:textSize="30sp"
        android:textColor="@color/md_black_1000"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(category)"
        android:id="@+id/category_product"
        android:layout_marginLeft="17dp"
        android:textColor="#80000000"
        android:textSize="20sp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/textView3"
        android:textColor="@color/md_black_1000"
android:layout_marginLeft="17dp"
        android:textSize="25sp"
        android:layout_marginTop="150dp"

        android:layout_alignStart="@+id/price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/description_product"
        android:textColor="#80000000"

        android:textSize="20sp"
        android:layout_marginTop="190dp"
android:layout_marginBottom="50dp"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price :"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:textColor="@color/md_black_1000"
        android:layout_marginRight="17dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/category_product"
        android:layout_alignStart="@+id/category_product" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/price_product"
        android:textSize="25sp"
        android:textColor="#80000000"

        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

</RelativeLayout>