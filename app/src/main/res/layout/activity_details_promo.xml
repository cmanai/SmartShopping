<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical" >
    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/add_to_list_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:background="#FFB805"
        materialdesign:animate="false"

        materialdesign:iconDrawable="@drawable/add_list"

        android:layout_above="@+id/price_product"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp" />
    <TextView
        android:id="@+id/title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:text="Title"
        android:textSize="30sp"
        android:textColor="@color/md_black_1000"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(category)"
        android:id="@+id/category_product"
        android:layout_marginLeft="17dp"
        android:textColor="#7f8c8d"
        android:textSize="20sp"
        android:layout_marginTop="50dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Description"
    android:id="@+id/textView3"
    android:textColor="@color/md_black_1000"

    android:textSize="25sp"
    android:layout_marginTop="200dp"
    android:layout_marginLeft="17dp"
    android:layout_alignStart="@+id/price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/description_product"
        android:textColor="#80000000"

        android:textSize="20sp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="50dp"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount :"
        android:id="@+id/textView2"
        android:textSize="22sp"
        android:textColor="@color/md_black_1000"
        android:layout_marginRight="17dp"
android:layout_marginTop="7dp"
        android:layout_below="@+id/category_product"
        android:layout_alignStart="@+id/category_product" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 50%"
        android:id="@+id/price_discount"
        android:textSize="25sp"
        android:textColor="#2ecc71"
android:layout_marginLeft="17dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Price :"
        android:id="@+id/textView4"
        android:textSize="22sp"
        android:textColor="@color/md_black_1000"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Price :"
        android:id="@+id/textView5"
        android:textSize="22sp"
        android:textColor="@color/md_black_1000"

        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000 DT"
        android:id="@+id/old_price_pp"
        android:textSize="22sp"
        android:textColor="#80000000"
        android:layout_below="@+id/price_discount"
        android:layout_alignStart="@id/price_discount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 DT"
        android:id="@+id/new_price_pp"
        android:textSize="22sp"
        android:textColor="#80000000"
        android:layout_below="@+id/old_price_pp"

        android:layout_alignStart="@id/old_price_pp" />


</RelativeLayout>